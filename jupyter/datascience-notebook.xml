<?xml version="1.0" encoding="utf-8"?>
<Containers>
    <TemplateURL>https://raw.githubusercontent.com/dev-wei/unraid_docker_templates/master/jupyter/datascience-notebook.xml</TemplateURL>
    <Beta>False</Beta>
    <Name>datascience-notebook</Name>
    <Overview>
        This is a folk of the jupyter datascience-notebook
    </Overview>
    <Support>dev.wei@gmail.com</Support>
    <Registry>https://registry.hub.docker.com/r/michaelwei/jupyter/</Registry>
    <GitHub>https://github.com/dev-wei/unraid_docker_templates</GitHub>
    <Repository>michaelwei/jupyter:datascience-notebook</Repository>
    <Project>https://github.com/dev-wei/unraid_docker_templates</Project>
    <BindTime>true</BindTime>
    <Privileged>false</Privileged>
    <Networking>
        <Mode>bridge</Mode>
        <Publish>
            <Port>
                <HostPort>9000</HostPort>
                <ContainerPort>8888</ContainerPort>
                <Protocol>tcp</Protocol>
            </Port>
        </Publish>
    </Networking>
    <Environment>
        <Variable>
            <Name>JUPYTER_ENABLE_LAB</Name>
            <Value>yes</Value>
        </Variable>
        <Variable>
            <Name>GRANT_SUDO</Name>
            <Value>yes</Value>
        </Variable>
        <Variable>
            <Name>NVIDIA_DRIVER_CAPABILITIES</Name>
            <Value>all</Value>
        </Variable>
        <Variable>
            <Name>NVIDIA_VISIBLE_DEVICES</Name>
            <Value>GPU-fce3d3cf-3757-b152-3bf0-c00efbc9764c</Value>
        </Variable>
    </Environment>
    <Data>
        <Volume>
            <HostDir>/mnt/user/Code/</HostDir>
            <ContainerDir>/home/jovyan/work</ContainerDir>
            <Mode>rw</Mode>
        </Volume>
    </Data>
    <WebUI>http://[IP]:[PORT:9000]/</WebUI>
    <Icon>https://avatars1.githubusercontent.com/u/5780349</Icon>
    <ExtraParams>-m 8g --runtime=nvidia --user root</ExtraParams>
</Containers>
